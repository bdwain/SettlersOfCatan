<h1>New game</h1>

<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being created:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "How many players?" %>
    <%= f.select(:num_players, [[3, 3], [4, 4]]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

